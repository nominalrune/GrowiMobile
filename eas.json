{
	"cli": {
		"appVersionSource": "remote"
	  },
	"build": {
		"base": {
			"env": {},
			"android": {
				"image": "latest"
			},
			"ios": {
				"image": "latest"
			}
		},
		"development": {
			"extends": "base",
			"developmentClient": true,
			"env": {
				"ENVIRONMENT": "development"
			},
			"android": {
				"distribution": "internal",
				"withoutCredentials": true
			},
			"ios": {
				"simulator": true
			}
		},
		"staging": {
			"extends": "base",
			"env": {
				"ENVIRONMENT": "staging"
			},
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			}
		},
		"production": {
			"extends": "base",
			"autoIncrement": true,
			"env": {
				"ENVIRONMENT": "production"
			}
		}
	}
}